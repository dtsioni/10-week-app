%div{id:"piccont"}
  %a{href:home_path}
    %img{:src => "http://bizitvideo.com/wp-content/uploads/2013/11/welcome.png",
    :style => "display:block;margin-left:auto;margin-right:auto;width:200px;heigth:auto;filter:alpha(opacity=100);"}
  -flash.each do |name, msg|
    =content_tag :div, msg, class: name    
  %p{:id => "notice"}
    =notice

  -if signed_in?
    =link_to "#{current_user.username}", current_user, style: ""
    =link_to "Sign Out", signout_path, method: :delete, style: "float:right;"
  -else
    %p{:style => "text-align: center;"}
      Not signed in!

  -if current_user && current_user.role == "admin"
    =link_to "Control Panel", control_path

